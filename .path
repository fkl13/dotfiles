#!/bin/bash

# Avoid duplicates in PATH
pathmunge () {
    if ! [[ "$PATH" =~ "$1" ]] ; then
        if [[ "$2" == "before" ]] ; then
            PATH="$1:$PATH"
        else
            PATH="$PATH:$1"
        fi
        export PATH
    fi
}

# go path
export GOPATH="${HOME}/go"
pathmunge "$GOPATH"
pathmunge "$GOPATH/bin"

# add go
pathmunge /usr/local/go/bin "before"

# add rust path
RUSTPATH="${HOME}/.cargo/bin"
pathmunge "$RUSTPATH"
unset RUSTPATH

unset -f pathmunge
