#!/bin/bash
set -e
set -o pipefail

fonts_dir=~/.local/share/fonts

echo ""
echo "download Fura Mono"
patched_fonts_dir=$fonts_dir/FuraMono
mkdir -p $patched_fonts_dir

curl -fLo "Fura Mono Regular Nerd Font Complete Mono.otf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/FiraMono/Regular/complete/Fura%20Mono%20Regular%20Nerd%20Font%20Complete%20Mono.otf";

curl -fLo "Fura Mono Bold Nerd Font Complete Mono.otf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/FiraMono/Bold/complete/Fura%20Mono%20Bold%20Nerd%20Font%20Complete%20Mono.otf";

curl -fLo "Fura Mono Medium Nerd Font Complete Mono.otf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/FiraMono/Medium/complete/Fura%20Mono%20Medium%20Nerd%20Font%20Complete%20Mono.otf"


echo ""
echo "Download JetBrains Mono"
patched_fonts_dir=$fonts_dir/JetBrainsMono
mkdir -p $patched_fonts_dir

curl -fLo "JetBrains Mono NL Bold Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/Bold/complete/JetBrains%20Mono%20NL%20Bold%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL BoldItalic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/BoldItalic/complete/JetBrains%20Mono%20NL%20Bold%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL ExtraBold Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/BoldItalic/complete/JetBrains%20Mono%20NL%20Bold%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL ExtraBoldItalic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/ExtraBoldItalic/complete/JetBrains%20Mono%20NL%20ExtraBold%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL ExtraLight Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/ExtraLight/complete/JetBrains%20Mono%20NL%20ExtraLight%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL ExtraLightItalic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/ExtraLightItalic/complete/JetBrains%20Mono%20NL%20ExtraLight%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL Italic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/Italic/complete/JetBrains%20Mono%20NL%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL Light Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/Light/complete/JetBrains%20Mono%20NL%20Light%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL LightItalic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/LightItalic/complete/JetBrains%20Mono%20NL%20Light%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL Medium Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/Medium/complete/JetBrains%20Mono%20NL%20Medium%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL MediumItalic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/MediumItalic/complete/JetBrains%20Mono%20NL%20Medium%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL Regular Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/Regular/complete/JetBrains%20Mono%20NL%20Regular%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL SemiBold Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/SemiBold/complete/JetBrains%20Mono%20NL%20SemiBold%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL SemiBoldItalic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/SemiBoldItalic/complete/JetBrains%20Mono%20NL%20SemiBold%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL Thin Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/Thin/complete/JetBrains%20Mono%20NL%20Thin%20Nerd%20Font%20Complete%20Mono.ttf"

curl -fLo "JetBrains Mono NL ThinItalic Nerd Font Complete Mono.ttf" \
--output-dir "$patched_fonts_dir" \
"https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/JetBrainsMono/NoLigatures/ThinItalic/complete/JetBrains%20Mono%20NL%20Thin%20Italic%20Nerd%20Font%20Complete%20Mono.ttf"

echo "Update fc-cache"
fc-cache -Ev
